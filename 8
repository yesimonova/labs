#include <stdio.h>
#include <math.h>

int main()
{
    printf("Выберите номер подзадания.\n");
    int answ;
    scanf ("%d",&answ);
    switch (answ) {
        case 1:
            printf("Это задание на нахождение размера файла в килобайтах.\n");
            double bytes,kbytes;
            printf("Введите размер файла в байтах.\n");
            scanf("%lf",&bytes);
            printf("Размер файла в килобайтах равен%lf\n",bytes/1024);
            break;
        case 2:
            printf("Это задание на нахождение максимального количества отрезков.\n");
            int A,B;
            printf("Введите положительное число A (A>B).\n");
            scanf("%d",&A);
            if (A<0) {
                printf("Введите положительное число!\n");
                scanf("%d",&A);
            }
            printf("Введите положительное число B (B<A).\n");
            scanf("%d",&B);
            while((A<B)||(B<0)) {
                if(A<B) {
                    printf("Введите число B, которое меньше A!\n");
                    scanf("%d",&B);
                }
                if(B<0) {
                    printf("Введите положительное число B!\n");
                    scanf("%d",&B);
                }
            }
            printf("Количество отрезков B, которые могут поместиться в отрезке A равно %d\n",A/B);
            break;
        case 3:
            printf("Это задание на нахождение незанятой части отрезка.\n");
            int A1,B1;
            printf("Введите положительное число A (A>B).\n");
            scanf("%d",&A1);
            if (A1<0) {
                printf("Введите положительное число!\n");
                scanf("%d",&A1);
            }
            printf("Введите положительное число B (B<A).\n");
            scanf("%d",&B1);
            while((A1<B1)||(B1<0)) {
                if(A1<B1) {
                    printf("Введите число B, которое меньше A!\n");
                    scanf("%d",&B1);
                }
                if(B1<0) {
                    printf("Введите положительное число B!\n");
                    scanf("%d",&B1);
                }
            }
            printf("Длина незанятой отрезками B части отрезка A равно %d\n",A1-(A1/B1)*B1);
            break;
        case 4:
            printf("Это задание на нахождение нового двузначного числа.\n");
            int a1;
            printf("Введите двузначное число.\n");
            scanf("%d",&a1);
            printf("Новое двузначное число=%d",a1%10*10+a1/10);
            break;
        case 5:
            printf("Это задание на смену цифр в трёхзначное числе.\n");
            int chislo,a2=1,rev;
            printf("Введите трёхзначное число.\n");
            scanf("%d",&chislo);
            int n=chislo;
            n/=10;
            while (n>0) {
                a2*=10;
                n/=10;
            }
            rev=(chislo%a2)*10+chislo/a2;
            printf("Новое трёхзначное число=%d",rev);
            break;
        default:
            printf("Неверный номер подзадания.");
    }
    return 0;
}
