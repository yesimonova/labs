#include <stdio.h>
#include <math.h>

int main()
{
    printf("Выберите номер подзадания.\n");
    int answ;
    scanf ("%d",&answ);
    switch (answ) {
        case 1:
            printf("Это задание на нахождение количества секунд, прошедших с начала последней минуты.\n");
            int N;
            printf("Введите количество секунд, прошедших с начала суток.\n");
            scanf("%d",&N);
            printf("Количество секунд, прошедших с последней минуты равно %d\n",N%60);
            break;
        case 2:
            printf("Это задание на определение дня недели.\n");
            int K;
            printf("0 — воскресенье, 1 — понедельник, 2 — вторник, . . . , 6 — суббота\n");
            printf("Введите день года.\n");
            scanf("%d",&K);
            printf("Номер дня недели равен %d\n",K%7);
            break;
        case 3:
            printf("Это задание на определение дня недели.\n");
            int K1,N1;
            printf("0 — воскресенье, 1 — понедельник, 2 — вторник, . . . , 6 — суббота\n");
            printf("Введите день года.\n");
            scanf("%d",&K1);
            printf("Введите номер дня недели, с которого начинался год.\n");
            scanf("%d",&N1);
            printf("Номер дня недели равен %d",((K1+N1-2)&7)+1);
            break;
        case 4:
            printf("Это задание на нахождение максимально возможного числа квадратов, которые могут поместиться в прямоугольнике, а также нахождение его незанятой части.\n");
            int A,B,C;
            printf("Введите положительную сторону A.\n");
            scanf("%d",&A);
            printf("Введите положительную сторону B.\n");
            scanf("%d",&B);
            printf("Введите положительную сторону C.\n");
            scanf("%d",&C);
            printf("Максимально возможное число квадратов в прямоугольнике AxB равно %d\n",(A/C)*(B/C));
            printf("Площадь незанятой части прямоугольника AxB равно %d\n",(A*B-(A/C*B/C*C*C)));
            break;
        case 5:
            printf("Это задание на определение номера столетия.\n");
            int year;
            printf("Введите номер года.\n");
            scanf("%d",&year);
            printf("Номер столетия равен %d\n",year/100+1);
            break;
        default:
            printf("Неверный номер подзадания.");
    }
    return 0;
}
